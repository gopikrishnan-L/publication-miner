<%- include('../partials/header') -%>
    <%- include('../partials/navbar') -%>
        <div class="pub-main">
            <h1>Publications</h1>
            <div class="main-wrapper">
                <div class="publication-list">
                    <% for(let publication of publications) {%>
                        <div class="publication-box">
                            <h3>
                                <%=publication.title%>
                            </h3>
                            <ul>
                                <li>Journal:
                                    <%=publication.journal.name%>
                                </li>
                                <li>Publisher:
                                    <%=publication.journal.publisher%>
                                </li>
                                <li>ISSN:
                                    <%=publication.journal.issn%>
                                </li>
                                <li>
                                    <section>Vol:
                                        <%=publication.journal.vol%>
                                    </section>
                                    <section>Issue:
                                        <%=publication.journal.issue%>
                                    </section>
                                    <section>Page no:
                                        <%=publication.journal.pageno%>
                                    </section>
                                </li>
                            </ul>
                            <form action="/user/publication/delete/<%= publication._id %>" method="POST">
                                <button style="border:none">delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
            <a href="/user/publication">Create new publication</a>
        </div>
        <%- include('../partials/footer') -%>